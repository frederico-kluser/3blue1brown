{
  "info": {
    "name": "Manim Video Generator API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Coleção Postman para testar os endpoints da API FastAPI que gera vídeos Manim a partir de descrições em linguagem natural. width/height são opcionais em todos os endpoints (padrão 1920x1080 16:9)."
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "ondokai_base_url",
      "value": "https://ondokai.com",
      "type": "string",
      "description": "Base URL publico exposto via ondokai.com apontando para a porta 8000 local."
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            ""
          ]
        }
      }
    },
    {
      "name": "Generate Code",
      "request": {
        "description": "Gera apenas o código Manim. width/height são opcionais e, se omitidos, usamos 1920x1080 (16:9).",
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Create a blue circle that grows then rotates\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/generate-code",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "generate-code"
          ]
        }
      }
    },
    {
      "name": "Generate Video (Base64)",
      "request": {
        "description": "Retorna o vídeo em base64. width/height podem ser omitidos (padrão 1920x1080) ou ajustados para layouts específicos.",
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Show the Pythagorean theorem equation a^2 + b^2 = c^2 appearing\",\n  \"width\": 1280,\n  \"height\": 720\n}"
        },
        "url": {
          "raw": "{{base_url}}/generate-video",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "generate-video"
          ]
        }
      }
    },
    {
      "name": "Generate Video File",
      "request": {
        "description": "Faz download direto do MP4. width/height são opcionais; remova-os para usar 1920x1080 ou ajuste para formatos como 1:1 ou 9:16.",
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Transform a red square into a blue circle with smooth animation\",\n  \"width\": 1080,\n  \"height\": 1080\n}"
        },
        "url": {
          "raw": "{{base_url}}/generate-video-file",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "generate-video-file"
          ]
        }
      }
    },
    {
      "name": "Ondokai.com",
      "description": "Mesmos endpoints usando o túnel ondokai.com (porta 8000).",
      "item": [
        {
          "name": "Health Check (ondokai.com)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{ondokai_base_url}}/",
              "host": [
                "{{ondokai_base_url}}"
              ],
              "path": [
                ""
              ]
            }
          }
        },
        {
          "name": "Generate Code (ondokai.com)",
          "request": {
            "description": "Gera apenas o código Manim. width/height são opcionais e, se omitidos, usamos 1920x1080 (16:9).",
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Create a blue circle that grows then rotates\"\n}"
            },
            "url": {
              "raw": "{{ondokai_base_url}}/generate-code",
              "host": [
                "{{ondokai_base_url}}"
              ],
              "path": [
                "generate-code"
              ]
            }
          }
        },
        {
          "name": "Generate Video (Base64) (ondokai.com)",
          "request": {
            "description": "Retorna o vídeo em base64. width/height podem ser omitidos (padrão 1920x1080) ou ajustados para layouts específicos.",
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Show the Pythagorean theorem equation a^2 + b^2 = c^2 appearing\",\n  \"width\": 1280,\n  \"height\": 720\n}"
            },
            "url": {
              "raw": "{{ondokai_base_url}}/generate-video",
              "host": [
                "{{ondokai_base_url}}"
              ],
              "path": [
                "generate-video"
              ]
            }
          }
        },
        {
          "name": "Generate Video File (ondokai.com)",
          "request": {
            "description": "Faz download direto do MP4. width/height são opcionais; remova-os para usar 1920x1080 ou ajuste para formatos como 1:1 ou 9:16.",
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Transform a red square into a blue circle with smooth animation\",\n  \"width\": 1080,\n  \"height\": 1080\n}"
            },
            "url": {
              "raw": "{{ondokai_base_url}}/generate-video-file",
              "host": [
                "{{ondokai_base_url}}"
              ],
              "path": [
                "generate-video-file"
              ]
            }
          }
        }
      ]
    }
  ]
}
